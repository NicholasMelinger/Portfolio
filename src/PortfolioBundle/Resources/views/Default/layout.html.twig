          </button>
         <a class="navbar-brand" href="{{ path ('portfolio_homepage') }}"> Portfolio</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="{{ app.request.attributes.get('_route') == 'portfolio_homepage' ? 'active' }}"><a href="{{ path ('portfolio_homepage') }}">Accueil</a></li>
            <li class="{{ app.request.attributes.get('_route') == 'recherche' ? 'active' }}"><a href="{{ path ('rechercheAvancee') }}">Recherche</a></li>


            {% if (app.session.get('userID') is not null) %}
                <li><a href="{{ path ('deconnexion') }}">Déconnexion ({{ app.session.get('userName') }})</a></li>
                <li>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="{{ path ('modification_profil', {'id': app.session.get('userID')}) }}" >
                      Mon profil&nbsp;
                      <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                      <li><a href="{{ path ('modification_profil', {'id': app.session.get('userID')}) }}">Consulter mon profil&nbsp;&nbsp;&nbsp;<span class="glyphicon glyphicon-bell"></span></a></li>
                      <li><a href="{{ path ('alertes_defaut', {'id': app.session.get('userID')}) }}">Mes alertes&nbsp;&nbsp;&nbsp;<span class="glyphicon glyphicon-bell"></span></a></li>
                    </ul>
                </li>
            {% else %}
                <li><a href="{{ path ('connexion') }}">Connexion</a></li>
                <li><a href="{{ path ('creation_profil') }}">Création profil</a></li>
            {% endif %}

            
            
            <li><a href="{{ path ('portfolio_contact') }}">Contact</a></li>
            {% if (app.session.get('userRole') == '1') %}
            <li><a href="{{ path ('admin_homepage') }}">Admin</a></li>
            {% endif %}
