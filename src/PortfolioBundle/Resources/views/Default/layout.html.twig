            <li>
              <form class="navbar-form navbar-left" role="search" action="{{ path ('rechercheParNom') }}" method="post" name ="nomRecherche" >
                <div class="form-group">
                    <input type="text" name ="nomRecherche" class="form-control" placeholder="Nom de la personne recherchée" size="25" required style="margin-left:10px;border-top-right-radius:0px;border-bottom-right-radius:0px;">
                </div>
                
                <button type="submit" class="btn btn-primary" style="margin-left:-5px;border-top-left-radius:0px;border-bottom-left-radius:0px;">
                    <span class="glyphicon glyphicon-search"></span>
                </button>
              </form>
