{% extends "PortfolioBundle:Default:layout2.html.twig" %}

{% block tete %}
<h1>Expériences professionnelles</h1>
        <p>Sur cette page, vous pouvez gérer vos expériences acquises lors de stages, de vos alternances et autres.</p>
{% endblock %}

{% block titre_section %}
	<h1>Gestion d'une expérience</h1>
{% endblock %}

{% block page %}
<div class="form">
 <p>
 	{{ form_start(form_exp) }}
 		{{ form_errors(form_exp) }}
 		<table>
 		<td>
 			<tr>{{ form_row(form_exp.typeExperience) }}</tr>
 			<tr>{{ form_row(form_exp.dureeExperience) }}</tr>
 			<tr>{{ form_row(form_exp.descriptionExperience) }}</tr>
 			<tr>{{ form_row(form_exp.cursus) }}</tr>
 			<tr><button type="submit" class="btn btn-lg btn-success" >Valider</button></tr>
 		</td>
 	</table>

 	{{ form_end(form_exp) }}
 </p>
</div>
{% endblock %}