{% extends "PortfolioBundle:Default:layout.html.twig" %}

{% block tete %}
<h1>Matrices</h1>
        <p>Sur cette page, vous pouvez gérer les matrices de compétences</p>
{% endblock %}

{% block titre_section %}
	<h1>Liste des matrices</h1>
{% endblock %}

{% block page %}
<div class="row">
    <div class="col-sm-4">
 		<p>
 			<a class="navbar-brand" href="{{ path ('matrice_ajout') }}"><u>Ajouter une matrice de themes</u></a>
		 </p>
	</div>
</div>
{% for mat in matrice %}
 <p>
<div class="row">
	<div class="col-sm-4">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<h3 class="panel-title"><a href="{{ path ('matrice_modifier', { 'id': mat.id }) }}"><b><u>{{ mat.flagActif }}</a></u></b> - <a href="{{ path ('matrice_supprimer', { 'id': mat.id }) }}"><u><font color="red">X</font></u></a></h3>
			</div>
			<div class="panel-body">
			<table>
				<td>
				<tr><b>Chemin du theme : </b>{{ mat }}</tr><hr/>
				</td>
			</table>
			</div>
		</div>
	</div>
</div>
</p>
{% endfor %}
{% endblock %}